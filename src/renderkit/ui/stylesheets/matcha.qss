/* ============================================================================
   STATUS COLORS (Inspired by Matcha)
   ============================================================================ */

/* Success */
.success, [status="success"] { color: #1a7f37; }
[theme="dark"] .success, [theme="dark"] [status="success"] { color: #3fb950; }

/* Danger */
.danger, [status="danger"] { color: #d1242f; }
[theme="dark"] .danger, [theme="dark"] [status="danger"] { color: #f85149; }

/* Attention */
.attention, [status="attention"] { color: #9a6700; }
[theme="dark"] .attention, [theme="dark"] [status="attention"] { color: #d29922; }

/* Muted */
.muted { color: #656d76; }
[theme="dark"] .muted { color: #848d97; }

/* ============================================================================
   UTILITIES
   ============================================================================ */

#Card {
    border: 1px solid #d0d7deb3;
    border-radius: 6px;
    background-color: #f6f8fa;
}

[theme="dark"] #Card {
    border-color: #30363db3;
    background-color: #161b22;
}

#Header {
    font-size: 24px;
    font-weight: bold;
}

/* ============================================================================
   DROP OVERLAY
   ============================================================================ */

#DropOverlay {
    border: 2px dashed #0969da;
    border-radius: 10px;
    background-color: rgba(9, 105, 218, 30);
    color: #1f2328;
    font-size: 20px;
    font-weight: 600;
    letter-spacing: 0.3px;
    padding: 24px;
}

[theme="dark"] #DropOverlay {
    border-color: #4493f8;
    background-color: rgba(68, 147, 248, 35);
    color: #e6edf3;
}
